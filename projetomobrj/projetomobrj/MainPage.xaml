<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetomobrj.MainPage">
    
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Buscar CEP" HorizontalTextAlignment="Start" TextColor="Black" FontSize="36"/>
        </Frame>
        <Entry 
            Placeholder="Digite o CEP"
            x:Name="cepDigitado"/>
        <Button Text="Pesquisar" Clicked="Button_Clicked"/>
        <Button x:Name="botaoMapa" Text="Mostra Mapa" Clicked="botaoMapa_Clicked"/>

        <Label x:Name="logradouro"></Label>
        <Label x:Name="bairro"></Label>
        <Label x:Name="localidade"></Label>
        <Label x:Name="ibge"></Label>
        <Label x:Name="gia"></Label>
        
    </StackLayout>
    
    

</ContentPage>
